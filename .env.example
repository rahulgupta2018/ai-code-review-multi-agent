# Environment Configuration
# Copy this file to .env and update the values

# Core Configuration
ENVIRONMENT=development
USE_AGDK=false
DEBUG=true

# AGDK Configuration
AGDK_ENABLED=false
AGDK_PROJECT_ID=your-project-id
AGDK_DEV_PORTAL_HOST=localhost
AGDK_DEV_PORTAL_PORT=8200
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# LLM Provider Configuration
DEFAULT_LLM_PROVIDER=ollama
LLM_FALLBACK_ORDER=ollama,openai,gemini

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG_ID=your-openai-org-id

# Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key

# Memory System Configuration
REDIS_URL=redis://localhost:6379
DATABASE_URL=sqlite:///data/memory.db
MEMORY_RETRIEVAL_STRATEGY=contextual
MEMORY_CONFIDENCE_THRESHOLD=0.7

# Analysis Configuration
MAX_FILE_SIZE=1048576
MAX_FILES_PER_ANALYSIS=1000
ANALYSIS_TIMEOUT=300

# Output Configuration
OUTPUT_BASE_DIR=outputs
DEFAULT_OUTPUT_FORMATS=json,html
DASHBOARD_EXPORT_ENABLED=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Performance Configuration
MAX_WORKERS=4
MEMORY_LIMIT=2GB
CPU_LIMIT=80

# Security Configuration
SECRET_KEY=your-secret-key-change-this
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Development Configuration
DEV_MODE=true
HOT_RELOAD=true
DEBUG_MEMORY=false
DEBUG_AGDK=false